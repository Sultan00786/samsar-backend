{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "declaration": false,
    "removeComments": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "express", "multer"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "**/*.d.ts"]
}
